datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["interactiveTransactions"]
}

enum UserType {
    DEB
    CRE
}

model User {
    userId      String   @id
    userType    UserType @default(DEB)
    email       String   @unique
    password    String
    name        String
    phoneNumber String   @unique
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now())
}
